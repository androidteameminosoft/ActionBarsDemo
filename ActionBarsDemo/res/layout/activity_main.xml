<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/butFirst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="@string/actionbarbasesceen" />

    <Button
        android:id="@+id/butSecondTabs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/butFirst"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="@string/actionbarwith" />

    <Button
        android:id="@+id/butwithnav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/butSecondTabs"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="Actionbar With NavigationList" />

</RelativeLayout>